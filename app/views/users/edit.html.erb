<h1>ユーザー情報編集</h1>
<%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    パスワードを変更する:
    <%= f.check_box :pass_edit %>
  </div>
  <div>
    <%= f.submit "変更を保存" %>
  </div>
<% end %>