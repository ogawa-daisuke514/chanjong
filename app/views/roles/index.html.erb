<h1>役一覧</h1>
<table>
  <thead>
    <tr>
      <th>役名</th>
      <th>翻</th>
      <th>概要</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |r| %>
      <tr>
        <td><%= link_to r.name, role_path(r) %></td>
        <td><%= r.faan %></td>
        <td><%= r.outline %></td>
        <td><%= link_to "コピーして編集", role_path(r), method: :post %></td>
        <% if r.user_id == current_user.id %>
          <td><%= link_to "編集", edit_role_path(r) %></td>
          <td><%= link_to "削除", role_path(r), method: :delete %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <%= link_to "新規作成", new_role_path %>
</div>
